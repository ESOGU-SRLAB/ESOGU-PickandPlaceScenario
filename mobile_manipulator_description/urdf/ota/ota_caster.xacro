<?xml version='1.0'?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">
  <property name="M_PI" value="3.1415926535897931" />

  <xacro:macro name="ota_swivel" params="base_link xyz_caster rpy_caster side">
	  
    <!-- CASTER BODY -->
    <link name='caster_${side}_link'>
      <visual>
        <origin xyz="0 0 0"/>
        <geometry>
          <mesh filename="file:////home/cem/colcon_ws/src/mobile_manipulator_description/meshes/ota/SarhosTeker.stl"
                scale="0.001 0.0008 0.001"/>
        </geometry>
      </visual>

      <collision>
        <origin xyz="0 0 0"/>
        <geometry>
          <cylinder radius="0.005" length="0.05"/>	  			  
        </geometry>
      </collision>

      <xacro:cylinder_inertial radius="0.005" length="0.07" mass="1" />
    </link>   
    <joint name="caster_${side}_joint" type="fixed">
      <axis xyz="0 0 1"/>
      <origin xyz="${xyz_caster}" rpy="${rpy_caster}"/>
      <child link="caster_${side}_link"/>
      <parent link="${base_link}"/>
    </joint>  
    
    <gazebo reference="caster_${side}_link">
      <mu1>1.0</mu1>
      <mu2>1.0</mu2>
      <kp>1000000.0</kp>
      <kd>10.0</kd>
      <minDepth>0.001</minDepth>
      <material>Gazebo/Red</material>
      <visual>
        <material>
          <ambient>1 0 0 1</ambient>
          <diffuse>1 0 0 1</diffuse>
          <specular>0.1 0.1 0.1 1</specular>
        </material>
      </visual>
    </gazebo>

    <!-- <link name='caster_wheel_${side}_link'>
