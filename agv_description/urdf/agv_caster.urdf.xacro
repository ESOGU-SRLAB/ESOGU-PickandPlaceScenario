<?xml version='1.0'?>
<robot xmlns:xacro="http://ros.org/wiki/xacro">
  <property name="M_PI" value="3.1415926535897931" />

  <xacro:macro name="agv_swivel" params="xyz_caster rpy_caster side">
	  
    <!-- Caster main link -->
    <link name='caster_${side}_link'>
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="file:////home/cem/colcon_ws/src/agv_description/meshes/OTAv07_meshes/SarhosTeker.stl" scale="0.001 0.001 0.001"/>
        </geometry>
      </visual>

      <collision>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <cylinder radius="0.005" length="0.07"/>
        </geometry>
      </collision>

      <xacro:cylinder_inertial radius="0.005" length="0.07" mass="0.1" />
    </link>      
    
    <joint name="caster_${side}_joint" type="continuous">
      <origin xyz="${xyz_caster}" rpy="${rpy_caster}"/>
      <axis xyz="0 0 1"/>
      <parent link="agv_base_link"/>
      <child link="caster_${side}_link"/>
    </joint>

    <!-- Görsel materyal -->
    <gazebo reference="caster_${side}_link">
      <material value="Gazebo/Gray"/>
    </gazebo>     

    <!-- Caster wheel link -->
    <link name='caster_wheel_${side}_link'>
      <visual>
        <origin xyz="0 0 0" rpy="0 1.570796 1.570796"/>
        <geometry>
          <cylinder radius="0.042" length="0.02"/>
        </geometry>
      </visual>

      <collision>
        <origin xyz="0 0 0" rpy="0 1.570796 1.570796"/>
        <geometry>
          <cylinder radius="0.042" length="0.02"/>
        </geometry>
      </collision>

      <xacro:cylinder_inertial radius="0.042" length="0.02" mass="0.1" />
    </link>      
    
    <joint name="caster_${side}_wheel_joint" type="continuous">
      <axis xyz="0 1 0"/>
      <origin xyz="-0.04 0 -0.07" rpy="0 0 0"/>
      <parent link="caster_${side}_link"/>
      <child link="caster_wheel_${side}_link"/>
    </joint>

    <!-- Gazebo Sim physics plugin (opsiyonel, sürtünme ve hareket için) -->
    <plugin name="caster_${side}_wheel_plugin" filename="gz-sim-diff-drive-system">
      <left_joint>caster_${side}_wheel_joint</left_joint>
      <right_joint>caster_${side}_wheel_joint</right_joint>
      <wheel_separation>0.0</wheel_separation>
      <wheel_radius>0.042</wheel_radius>
      <topic>/caster_${side}_wheel/cmd_vel</topic>
    </plugin>

  </xacro:macro>
</robot>
